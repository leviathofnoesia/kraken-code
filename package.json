{
  "name": "kraken-code",
  "version": "1.2.1",
  "description": "Kraken Code - Transforms OpenCode into an autonomous, high-density development environment",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "kraken-code": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "scripts/install-curl.sh",
    "assets",
    "docs",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema.json": "./dist/kraken-code.schema.json",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "KRAKEN_BUILD=1 bun run build:plugin && bun run build:cli && bun run build:schema",
    "build:plugin": "KRAKEN_BUILD=1 bun build src/index.ts --outdir dist --target node --format esm --external @opencode-ai/plugin --external @opencode-ai/sdk --external zod --minify",
    "build:cli": "bun build src/cli/index.ts --outdir dist/cli --target bun --format esm --packages external --minify",
    "build:schema": "bun run script/build-schema.ts && mkdir -p dist && cp assets/kraken-code.schema.json dist/kraken-code.schema.json",
    "build:binary": "bun build --compile src/cli/index.ts --outfile bin/kraken-code",
    "clean": "rm -rf dist bin",
    "prepublishOnly": "bun run clean && bun run build && bun run typecheck",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "install:curl": "bash scripts/install-curl.sh",
    "agent:docs": "npx skill-compiler compile",
    "agent:docs:watch": "npx skill-compiler watch",
    "agent:docs:check": "npx skill-compiler compile --check",
    "agent:docs:suggest": "npx skill-compiler suggest",
    "agent:docs:sync": "npx skill-compiler sync",
    "postinstall": "npx skill-compiler compile --silent"
  },
  "keywords": [
    "opencode",
    "kraken-code",
    "plugin",
    "kraken",
    "maelstrom",
    "abyssal",
    "nautilus",
    "coral",
    "siren",
    "leviathan",
    "poseidon",
    "scylla",
    "cartographer",
    "agents",
    "ai",
    "llm",
    "skills",
    "commands",
    "memory",
    "mcp"
  ],
  "author": "Kraken Code Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leviathofnoesia/kraken-code.git"
  },
  "bugs": {
    "url": "https://github.com/leviathofnoesia/kraken-code/issues"
  },
  "homepage": "https://github.com/leviathofnoesia/kraken-code#readme",
  "dependencies": {
    "@clack/core": "^0.5.0",
    "@clack/prompts": "^1.0.0-alpha.9",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@openauthjs/openauth": "^0.4.3",
    "commander": "^14.0.2",
    "glob": "^11.0.0",
    "hono": "^4.10.4",
    "js-yaml": "^4.1.1",
    "jsonc-parser": "^3.3.1",
    "open": "^11.0.0",
    "picocolors": "^1.1.1",
    "picomatch": "^4.0.2",
    "xdg-basedir": "^5.1.0",
    "zod": "4.1.8"
  },
  "optionalDependencies": {
    "@ast-grep/cli": "^0.40.0",
    "@ast-grep/napi": "^0.40.0"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "^1.1.0",
    "@opencode-ai/sdk": "^1.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/picomatch": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bun-types": "latest",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "skill-compiler": "latest",
    "typescript": "^5.9.3",
    "typescript-language-server": "^5.1.3"
  },
  "trustedDependencies": [
    "@ast-grep/cli",
    "@ast-grep/napi",
    "@code-yeongyu/comment-checker"
  ]
}
